{
    "name": "module-partners/paypal",
    "description": "PrestaShop module PayPal",
    "homepage": "https://paypal.com/",
    "license": "AFL-3.0",
    "authors": [
        {
            "name": "202 ecommerce",
            "email": "tech@202-ecommerce.com"
        }
    ],
    "config": {
        "vendor-dir": "vendor",
        "preferred-install": "dist",
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "prepend-autoloader": false,
        "platform": {
            "php": "5.6"
        }
    },
    "autoload": {
        "psr-4": {
            "PaypalPPBTlib\\": "vendor/ppbtlib/src/",
            "PaypalAddons\\": "."
        },
        "exclude-from-classmap": ["/vendor/symfony/polyfill-php72/"],
        "classmap": [
          "classes/",
          "controllers/front/abstract.php",
          "paypal.php"
        ]
    },
    "scripts": {
        "pre-autoload-dump": [
            "if [ ${PPBTCLASSLIB_DEV_PATH} ]; then php ${PPBTCLASSLIB_DEV_PATH}/PPBTlib/refresh.php .; fi"
        ]
    },
    "require": {
        "php": ">=5.6.0",
        "paypal/paypal-checkout-sdk": " 1.*",
        "guzzlehttp/guzzle": "6.*",
        "paypal/rest-api-sdk-php": "1.*"
    },
    "require-dev": {
        "prestashop/php-dev-tools": "^3.4"
    },
    "type": "prestashop-module"
}